<h1>Welcome, <%=@user.name%>!</h1> 

    <div class = "sidebar">
    <h2>Menu</h2>
        <form method="post" action="/users/logout">
            <input type="submit" value="Sign-out">
        </form>
        <br>
        <form method="get" action="/users/<%=@user.id%>">
            <input type="submit" value="Account Details">
        </form>
       <br>
        <form method="post" action="/users/<%=@user.id%>/delete>">
            <input type="submit" value="Delete Account">
        </form>
        

    </div>

    <%if @user.teacher?%>
        <h3>Current Students:</h3>
        <ul>
            <%@students.each do |student|%>
                <br>
                <a href="/assignments/students/<%=student.id%>"> <%=student.name%> </a>
                <br>
            <%end%>
        <ul>
    <%else%>
        <%if @user.assignments.empty?%>
            <p>ASSIGNMENTS COMING SOON!</p>
        <%else%>
            <h3>Assignments:</h3>
            <%@user.assignments.reverse.each do |assignment|%>
                <br>
                <p>
                <%=assignment.created_at.strftime("%b %d, %Y")%>
                <br>
                <br>
                <%=assignment.content%>
                <br>
                
                </p>
                
                <hr style="width:50%;text-align:left;margin-left:0">
                <%end%>
        <%end%>
    <%end%>