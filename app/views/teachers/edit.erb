<h1>Edit Profile</h1>
    <form method="post" action="/teachers/<%=@user.id%>">
        <input type="hidden" name="_method" value="patch">
        <label>Name:</label>
        <input type="text" name="teacher[name]" value="<%=@user.name%>">
        <br>
        <br>
        <label>Phone:</label>
        <input type="text" name="teacher[phone_number]" value="<%=@user.phone_number%>">
        <br>
        <br>
        <label>Email:</label>
        <input type="text" name="teacher[email]" value="<%=@user.email%>">
        <br>
        <br>
        <input type="submit" value="Update Profile">
    </form>